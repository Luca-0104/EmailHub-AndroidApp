<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#999999"
                />

            <corners
                android:radius="5dp"
                />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="#FF8000"
                />

            <corners
                android:radius="5dp"
                />
        </shape>
    </item>
</selector>